# .bashrc

source ~/.bash/functions
source ~/.bash/profile
[ "Darwin" == "`uname`" ] &&  source ~/.bash/darwin_profile
# env_profile="~/.bash/$(uname|tr 'A-Z' 'a-z')_profile"
# [ -s $env_profile ] &&  source $env_profile
[ -s ~/.bash/bashrc.local ] && source ~/.bash/bashrc.local
[ -s ~/.rubyrc ] && source ~/.rubyrc

[ -d ~/bin ] && export PATH=~/bin:$PATH

[ -s ~/.rvm/scripts/rvm ] && source ~/.rvm/scripts/rvm
