#!/bin/sh
CURR_DIR="`pwd`"
PROJ_NAME=`basename $CURR_DIR`

DIR=${1:-$CURR_DIR}

gnome-terminal --geometry="136x20+345+250" \
                          --window --working-directory=${DIR} -t "$PROJ_NAME/server" -e "script/server" \
                          --tab --working-directory=${DIR} -t "$PROJ_NAME/console" -e "script/console" \
               --geometry="136x50+20+20" \
                          --window --working-directory=${DIR} -t "$PROJ_NAME/vim" -e "vim app/"

