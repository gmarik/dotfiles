#!/bin/bash
# vim: ft=sh
#
# based on 
# http://www.derekwyatt.org/2012/09/01/the-most-useful-code-ive-written-in-weeks/

# watchme 'rspec %' ./spec
# runs `rspec files_that_changed`
#
# watchme rspec ./spec
# runs just `rspec`

cmd="$1"
shift
fileSpec="$@"

sentinel=/tmp/t.$$

touch $sentinel

while :
do
  files=$(find $fileSpec -newer $sentinel ) # -a '(' $fileSpec ')')
#
  if [ $? != 0 ]; then exit $?; fi

  if [ "$files" != "" ]; then
    run_cmd=${cmd//%/$files}
    echo "Running $run_cmd"

    $run_cmd
    touch $sentinel
  fi
  sleep 0.1
done

